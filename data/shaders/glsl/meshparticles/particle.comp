#version 450

#include "gpu_cmd.h"

struct ParticleSystem
{
    float deltaT;
};

struct GlobalParticleData
{
	uint aliveCount;
};

struct Particle
{
	vec4 pos;
	vec4 color;
};

struct AppendJob 
{
	vec2 screenPos;
};

layout(binding = 0) uniform UBOView
{
	mat4 projection;
	mat4 model;
	mat4 view;
} viewData;

layout(binding = 1) uniform UBOParticleSysem
{
   ParticleSystem particleSystem;
};

layout(binding = 2) buffer AppendBuffer
{
   AppendJob appendJobs[];
};

layout(binding = 3) buffer ParticleBuffer
{
   Particle particles[];
};

layout (binding = 4) uniform sampler2D depthTexture;

layout(binding = 5) buffer SSBOGpuCmdBuffer
{
   GpuCmdBuffer gpuCmdBuffer;
};

layout(binding = 6) buffer SSBOGlobalData
{
   GlobalParticleData globalData;
};

layout (local_size_x = 64, local_size_y = 1, local_size_z = 1) in;

void main() 
{
	uint id = gl_GlobalInvocationID.x;

	if (id >= gpuCmdBuffer.particleCount)
	{
		return;
	}

	AppendJob job = appendJobs[id];
	ivec2 screenPos = ivec2(job.screenPos.x, job.screenPos.y);

	float depth = texelFetch(depthTexture, screenPos, 0).r;

	particles[id].pos = vec4(screenPos.x, screenPos.y, 0.0, 1.0);
	particles[id].color = vec4(screenPos.x, screenPos.y, depth, 1.0);

	atomicAdd(globalData.aliveCount, 1);

	// Update draw indirect command
	atomicAdd(gpuCmdBuffer.drawCmd.vertexCount, 1);
	gpuCmdBuffer.drawCmd.instanceCount = 1;
	gpuCmdBuffer.drawCmd.firstVertex = 0;
	gpuCmdBuffer.drawCmd.firstInstance = 0;
}

